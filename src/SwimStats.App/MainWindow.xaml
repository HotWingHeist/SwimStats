<Window x:Class="SwimStats.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:local="clr-namespace:SwimStats.App"
        xmlns:controls="clr-namespace:SwimStats.App.Controls"
        xmlns:converters="clr-namespace:SwimStats.App.Converters"
        xmlns:res="clr-namespace:SwimStats.App.Resources"
        mc:Ignorable="d"
        Title="{res:Localize AppTitle}" 
        Height="750" Width="1500"
        MinHeight="500" MinWidth="800"
        Background="#FFF5F5F5">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:InverseBooleanConverter x:Key="InverseBoolConverter"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        <converters:CourseToDisplayNameConverter x:Key="CourseToDisplayNameConverter"/>
        
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.85"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Modern ComboBox Style -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderBrush" Value="#FFCCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>
    </Window.Resources>
    <DockPanel>
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top" Background="White" BorderBrush="#FFE0E0E0" BorderThickness="0,0,0,1">
            <MenuItem Header="File">
                <MenuItem Header="Reload Configuration" Click="ReloadConfiguration_Click"/>
            </MenuItem>
            <MenuItem Header="{res:Localize Help}">
                <MenuItem Header="{res:Localize About}" Click="About_Click"/>
            </MenuItem>
        </Menu>
        
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="2.5*" MinHeight="200"/>
                <RowDefinition Height="1*" MinHeight="150"/>
            </Grid.RowDefinitions>

            <!-- Filter Controls Row -->
            <Border Grid.Row="0" Background="White" CornerRadius="6" Padding="12" Margin="0,0,0,10" 
                BorderBrush="#FFE0E0E0" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*" MinWidth="120" MaxWidth="180"/>
                    <ColumnDefinition Width="Auto" MinWidth="15"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*" MinWidth="100" MaxWidth="140"/>
                    <ColumnDefinition Width="Auto" MinWidth="15"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="Auto" MinWidth="15"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="2*" MinWidth="200"/>
                    <ColumnDefinition Width="Auto" MinWidth="15"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*" MinWidth="90" MaxWidth="120"/>
                    <ColumnDefinition Width="Auto" MinWidth="15"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" VerticalAlignment="Center" FontWeight="SemiBold" Text="{res:Localize Stroke}" Foreground="#FF333333"/>
                <ComboBox Grid.Column="1" VerticalAlignment="Center" 
                          Style="{StaticResource ModernComboBox}"
                          ItemsSource="{Binding Strokes}" 
                          SelectedItem="{Binding SelectedStroke}"
                          DisplayMemberPath="DisplayName"/>
                
                <TextBlock Grid.Column="3" VerticalAlignment="Center" FontWeight="SemiBold" Text="{res:Localize Distance}" Foreground="#FF333333"/>
                <ComboBox Grid.Column="4" VerticalAlignment="Center" 
                          Style="{StaticResource ModernComboBox}"
                          ItemsSource="{Binding Distances}" 
                          SelectedItem="{Binding SelectedDistance}"/>
                
                <TextBlock Grid.Column="6" VerticalAlignment="Center" FontWeight="SemiBold" Text="Course" Foreground="#FF333333"/>
                <controls:CheckboxComboBox Grid.Column="7" VerticalAlignment="Center" 
                          Panel.ZIndex="1000"
                          Style="{StaticResource ModernComboBox}"
                          ItemsSource="{Binding SelectableCourses}">
                    <controls:CheckboxComboBox.ItemTemplate>
                        <DataTemplate>
                            <CheckBox Content="{Binding Name}" 
                                      IsChecked="{Binding IsSelected}"
                                      Click="CourseCheckBox_Click"
                                      Margin="2"/>
                        </DataTemplate>
                    </controls:CheckboxComboBox.ItemTemplate>
                </controls:CheckboxComboBox>
                
                <TextBlock Grid.Column="9" VerticalAlignment="Center" FontWeight="SemiBold" Text="{res:Localize Swimmers}" Foreground="#FF333333"/>
                <controls:CheckboxComboBox Grid.Column="10" VerticalAlignment="Center"
                          Style="{StaticResource ModernComboBox}"
                          ItemsSource="{Binding SelectableSwimmers}"
                          MaxDisplayLength="40">
                    <controls:CheckboxComboBox.ItemTemplate>
                        <DataTemplate>
                            <CheckBox Content="{Binding Name}" 
                                      IsChecked="{Binding IsSelected}"
                                      Click="CheckBox_Click"
                                      Margin="2"/>
                        </DataTemplate>
                    </controls:CheckboxComboBox.ItemTemplate>
                </controls:CheckboxComboBox>
                <!-- Select All/None buttons -->
                <StackPanel Grid.Column="11" Orientation="Horizontal" VerticalAlignment="Center" Margin="8,0,0,0">
                    <Button Style="{StaticResource ModernButton}"
                            Command="{Binding SelectAllSwimmersCommand}"
                            Background="#FF009E73"
                            Margin="0,0,4,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="✓" FontSize="14" Margin="0,0,6,0"/>
                            <TextBlock Text="{res:Localize SelectAll}" FontSize="13" Foreground="White"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource ModernButton}"
                            Command="{Binding SelectNoneSwimmersCommand}"
                            Background="#FFCCCCCC">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="✗" FontSize="14" Margin="0,0,6,0"/>
                            <TextBlock Text="{res:Localize SelectNone}" FontSize="13"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
                
                <TextBlock Grid.Column="13" VerticalAlignment="Center" FontWeight="SemiBold" Text="{res:Localize Language}" Foreground="#FF333333"/>
                <ComboBox Grid.Column="14" VerticalAlignment="Center" 
                          Style="{StaticResource ModernComboBox}"
                          SelectedIndex="0" SelectionChanged="Language_SelectionChanged">
                    <ComboBoxItem Content="English" Tag="en"/>
                    <ComboBoxItem Content="Nederlands" Tag="nl"/>
                </ComboBox>
                
                <!-- EZ-PC Logo -->
                <Viewbox Grid.Column="15" 
                         Height="50" 
                         HorizontalAlignment="Right" 
                         VerticalAlignment="Center"
                         Margin="10,0,0,0"
                         Stretch="Uniform">
              <Image Source="/Assets/ezpc-logo.png" />
                </Viewbox>
            </Grid>
        </Border>

        <!-- Action Buttons Row -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button 
                    Style="{StaticResource ModernButton}"
                    Command="{Binding ImportFromSwimRankingsCommand}" 
                    IsEnabled="{Binding IsImporting, Converter={StaticResource InverseBoolConverter}}"
                    Background="#FF0072B2"
                    ToolTip="Import from SwimRankings (Recommended for international swimmers)">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📥 " FontSize="16" Margin="0,0,6,0"/>
                        <TextBlock Text="SwimRankings" Foreground="White" FontSize="13"/>
                    </StackPanel>
                </Button>
                <Button 
                    Style="{StaticResource ModernButton}"
                    Margin="8,0,0,0"
                    Command="{Binding ImportFromSwimTrackCommand}" 
                    IsEnabled="{Binding IsImporting, Converter={StaticResource InverseBoolConverter}}"
                    Background="#FF0072B2"
                    ToolTip="Import from SwimTrack (Alternative source for Dutch swimmers)">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📥 " FontSize="16" Margin="0,0,6,0"/>
                        <TextBlock Text="SwimTrack" Foreground="White" FontSize="13"/>
                    </StackPanel>
                </Button>
                <Button 
                    Style="{StaticResource ModernButton}"
                    Margin="8,0,0,0"
                    Command="{Binding ClearDataCommand}" 
                    IsEnabled="{Binding IsImporting, Converter={StaticResource InverseBoolConverter}}"
                    Background="#FFD55E00">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🗑️ " FontSize="16" Margin="0,0,6,0"/>
                        <TextBlock Text="{res:Localize ClearDataButton}" Foreground="White" FontSize="13"/>
                    </StackPanel>
                </Button>
                <Button 
                    Style="{StaticResource ModernButton}"
                    Margin="8,0,0,0"
                    Command="{Binding CancelImportCommand}" 
                    IsEnabled="{Binding IsImporting}"
                    Background="#FFCC0000"
                    ToolTip="Stop the current import operation">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="⏹️ " FontSize="16" Margin="0,0,6,0"/>
                        <TextBlock Text="Cancel" Foreground="White" FontSize="13"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Progress bar for import -->
        <Border Grid.Row="2" 
                Background="White" 
                CornerRadius="6" 
                Padding="12" 
                Margin="0,0,0,10"
                BorderBrush="#FFE0E0E0" 
                BorderThickness="1"
                Visibility="{Binding IsImporting, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel>
                <TextBlock Text="{Binding ImportStatus}" Margin="0,0,0,6" FontWeight="SemiBold" Foreground="#FF555555"/>
                <ProgressBar Height="26" Minimum="0" Maximum="100" Value="{Binding ImportProgress}">
                    <ProgressBar.Foreground>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#FF0072B2" Offset="0"/>
                            <GradientStop Color="#FF009E73" Offset="1"/>
                        </LinearGradientBrush>
                    </ProgressBar.Foreground>
                </ProgressBar>
            </StackPanel>
        </Border>

        <!-- Chart with border -->
        <Border Grid.Row="3" 
                Background="White" 
                CornerRadius="6" 
                Padding="8" 
                Margin="0,0,0,10"
                BorderBrush="#FFE0E0E0" 
                BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Chart -->
                <oxy:PlotView Grid.Row="0" 
                              x:Name="ChartPlotView"
                              Model="{Binding PlotModel}"
                              Visibility="{Binding HasSwimmersSelected, Converter={StaticResource BoolToVisibilityConverter}}" />
                
                <!-- Empty state message - No swimmers selected -->
                <StackPanel Grid.Row="0" 
                            VerticalAlignment="Center" 
                            HorizontalAlignment="Center"
                            Visibility="{Binding HasSwimmersSelected, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                    <TextBlock Text="📊" FontSize="48" HorizontalAlignment="Center" Opacity="0.3" Margin="0,0,0,10"/>
                    <TextBlock Text="{res:Localize NoSwimmersSelected}" 
                               FontSize="14" 
                               Foreground="#FF888888"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               MaxWidth="400"/>
                </StackPanel>
                
                <!-- Empty state message - No data available -->
                <StackPanel Grid.Row="0" 
                            VerticalAlignment="Center" 
                            HorizontalAlignment="Center"
                            Visibility="{Binding HasNoData, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="📂" FontSize="48" HorizontalAlignment="Center" Opacity="0.3" Margin="0,0,0,10"/>
                    <TextBlock Text="{res:Localize NoDataAvailable}" 
                               FontSize="14" 
                               Foreground="#FF888888"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               MaxWidth="400"/>
                </StackPanel>
                
                <!-- Chart controls hint -->
                <TextBlock Grid.Row="1" 
                           Text="{res:Localize ChartControls}"
                           FontSize="10" 
                           Foreground="#FF888888" 
                           Margin="5,3,5,3"
                           HorizontalAlignment="Center"/>
            </Grid>
        </Border>
        
        <!-- Personal Records Table -->
        <Border Grid.Row="4" 
                Background="White" 
                CornerRadius="6" 
                Padding="10" 
                BorderBrush="#FFE0E0E0" 
                BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" 
                           Text="{res:Localize PersonalRecords}" 
                           FontSize="15" 
                           FontWeight="Bold" 
                           Foreground="#FF333333"
                           Margin="0,0,0,8"/>
                
                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding PersonalRecords}" 
                          SelectedItem="{Binding SelectedPersonalRecord}"
                          AutoGenerateColumns="False" 
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          GridLinesVisibility="Horizontal"
                          AlternatingRowBackground="#FFF8F8F8"
                          RowBackground="White"
                          BorderThickness="0"
                          CanUserResizeColumns="True"
                          CanUserSortColumns="True"
                          FontSize="12"
                          SelectionMode="Single"
                          MouseDoubleClick="DataGrid_MouseDoubleClick">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#FF0072B2"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Padding" Value="8,6"/>
                            <Setter Property="BorderThickness" Value="0,0,1,0"/>
                            <Setter Property="BorderBrush" Value="#FF005A8E"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridColumnHeader">
                                        <Border Background="{TemplateBinding Background}" 
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                Padding="{TemplateBinding Padding}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <ContentPresenter Grid.Column="0" VerticalAlignment="Center"/>
                                                <!-- Sort indicator -->
                                                <TextBlock Grid.Column="1" 
                                                           x:Name="SortIndicator"
                                                           Margin="4,0,0,0"
                                                           VerticalAlignment="Center"
                                                           Visibility="Collapsed"
                                                           FontFamily="Segoe UI Symbol"/>
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="SortDirection" Value="Ascending">
                                                <Setter TargetName="SortIndicator" Property="Text" Value="▲"/>
                                                <Setter TargetName="SortIndicator" Property="Visibility" Value="Visible"/>
                                            </Trigger>
                                            <Trigger Property="SortDirection" Value="Descending">
                                                <Setter TargetName="SortIndicator" Property="Text" Value="▼"/>
                                                <Setter TargetName="SortIndicator" Property="Visibility" Value="Visible"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Padding" Value="6,4"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#FFD0E8F2"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="{res:Localize Swimmer}" Binding="{Binding SwimmerName}" Width="2*"/>
                        <DataGridTextColumn Header="{res:Localize Stroke}" Binding="{Binding StrokeName}" Width="1.2*"/>
                        <DataGridTextColumn Header="{res:Localize Distance}" Binding="{Binding Distance}" Width="0.8*"/>
                        <DataGridTextColumn Header="{res:Localize BestTime}" Binding="{Binding BestTimeFormatted}" Width="1*" SortMemberPath="BestTime">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Foreground" Value="#FF009E73"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="{res:Localize Date}" Binding="{Binding Date, StringFormat='{}{0:dd-MM-yyyy}'}" Width="1.2*"/>
                        <DataGridTextColumn Header="{res:Localize SeasonalBest}" Binding="{Binding SeasonalBestFormatted}" Width="1*" SortMemberPath="SeasonalBest"/>
                        <DataGridTextColumn Header="{res:Localize Date}" Binding="{Binding SeasonalBestDate, StringFormat='{}{0:dd-MM-yyyy}'}" Width="1.2*"/>
                        <DataGridTextColumn Header="{res:Localize PreviousSeasonalBest}" Binding="{Binding PreviousSeasonalBestFormatted}" Width="1.2*" SortMemberPath="PreviousSeasonalBest"/>
                        <DataGridTextColumn Header="{res:Localize Date}" Binding="{Binding PreviousSeasonalBestDate, StringFormat='{}{0:dd-MM-yyyy}'}" Width="1.2*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
    </DockPanel>
</Window>